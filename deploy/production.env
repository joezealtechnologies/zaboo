# Production Environment Variables for FaZona EV
# Copy this to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_USER=fazona_user
DB_PASSWORD=your_secure_database_password
DB_NAME=fazona_ev
DB_PORT=3306

# JWT Secret (generate a strong secret)
JWT_SECRET=your_very_secure_jwt_secret_key_here_make_it_long_and_random

# Server Configuration
NODE_ENV=production
PORT=5000

# Domain Configuration
DOMAIN=fazona.org
FRONTEND_URL=https://fazona.org
BACKEND_URL=https://fazona.org/api

# File Upload Configuration
UPLOAD_PATH=/var/www/fazona.org/uploads
MAX_FILE_SIZE=5242880

# Email Configuration (if needed for contact forms)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@fazona.org
SMTP_PASS=your_email_password

# Security
CORS_ORIGIN=https://fazona.org
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/fazona-ev/app.log